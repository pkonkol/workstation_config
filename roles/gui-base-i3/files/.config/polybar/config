[global/wm]
margin-top = 0
margin-bottom = 0
include-file = $HOME/.config/polybar/srcery

[bar/all]
inherit = bar/srcery
width = 100%
height = 20
offset-y = 0
offset-x = 0
radius = 0
fixed-center = true
line-size = 1
border-size = 0
border-top-size = 4
border-left-size = 5
border-right-size = 5
border-bottom-size = 0
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1
cursor-click = pointer
cursor-scroll = ns-resize
bottom=false
font-0 = "Terminus:pixelsize=16;3"
font-1 = "Symbols Nerd Font:pixelsize=15;3"
dpi-x = 0
dpi-y = 0
enable-ipc = true
monitor = ${env:MONITOR:}

[bar/main]
inherit=bar/all
modules-left = powermenu jgmenu sync i3 xwindow
modules-right = idle temp backlight pulseaudio root wifi cpu mem bat0 bat1 popup-calendar 
tray-position = right
tray-padding = 0
tray-maxsize = 16

[bar/side]
inherit=bar/all
modules-left = powermenu i3 xwindow
modules-right = idle temp backlight pulseaudio root wifi cpu mem bat0 bat1 popup-calendar 


[module/idle]
type = custom/script
exec = echo $(( $(xidlehook --print) / 1000 ))
interval = 1
format = <label>
label = 鈴%output:0:15:...%

[module/sync]
type = custom/text
# exec-if = ""
content = ""
click-left = "rclone bisync gdrive:/DriveSyncFiles/pkonkol-obsidian/ ~/mnt/obsidian --verbose"
click-right = "jgmenu_run >/dev/null 2>&1 &"

[module/jgmenu]
type = custom/text
content-padding = 0
content = ""
click-left = "jgmenu_run >/dev/null 2>&1 &"

[module/i3]
inherit=module/srcery
type= internal/i3

format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

pin-workspaces = true
inline-mode = true
fuzzy-match = true

label-mode-padding = 0
label-mode-foreground = ${color.black}
label-mode-background = ${color.white}

label-focused = %name%
label-focused-background = ${color.bright_black}
label-focused-underline= ${color.red}
label-focused-foreground= ${color.yellow}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${color.yellow}
label-urgent-foreground = ${color.black}
label-urgent-underline = ${self.label-focused-underline}
label-urgent-padding = 1

label-separator = |

[module/xwindow]
type = internal/xwindow
label = " %title:0:30:...% "
label-background = ${color.bright_black}
label-foreground = ${color.yellow}
label-underline = ${color.red}

[module/wifi]
type = internal/network
interface = eth0
label-connected = 直%local_ip%
format-connected = <label-connected>

[module/temp]
type = internal/temperature
interval = 0.5
thermal-zone = 0
