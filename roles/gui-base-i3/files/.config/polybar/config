ramp-0 =  ""
ramp-1 =  ""
ramp-2 =  ""

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
label-volume =%percentage%%

ramp-volume-0 =奄
ramp-volume-1 =奔
ramp-volume-2 =墳

label-muted =ﱝ%percentage%%
