[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
label-volume = %percentage%%

ramp-volume-0 = 奄
ramp-volume-1 = 奔
ramp-volume-2 = 墳

label-muted = ﱝ%percentage%%
label-muted-foreground = ${srcery-colors.red}
format-volume = <ramp-volume><label-volume>
click-right = pavucontrol &

[module/home]
type=internal/fs
inherit=module/srcery
intervall=25
mount-0=/home
label-mounted = home:%{T2}%percentage_used%%%{T-}
format-mounted = <label-mounted>
format-unmounted = <label-unmounted>

[module/root]
type=internal/fs
inherit=module/srcery
intervall=25
mount-0=/
label-mounted = %{T2}%percentage_used:2%%%{T-}
format-mounted = <label-mounted>
format-unmounted = <label-unmounted>

[module/title]
type = internal/xwindow
inherit=module/srcery
format = <label>
format-padding = 0
label = "%{T2}%title%%{T-}"
label-maxlen = 40

[module/cpu]
type = internal/cpu
inherit=module/srcery
interval = 2
label = %percentage%%
format = <label>

[module/mem]
type = internal/memory
inherit=module/srcery
interval = 2
label = %gb_free%
label-warn = %gb_free%
label-warn-foreground = ${color.red}
format = <label>
format-warn = <label>


[module/popup-calendar]
type = custom/script
exec = ~/.local/bin/polybar-popup-calendar.sh
interval = 1
click-left = ~/.local/bin/polybar-popup-calendar.sh --popup &

[module/powermenu]
type = custom/text
click-left = "rofi -show power_menu -modi power_menu:rofi-power-menu &"
content = ""


