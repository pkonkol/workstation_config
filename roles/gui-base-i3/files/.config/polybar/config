[global/wm]
margin-top = 0
margin-bottom = 0
include-file = $HOME/.config/polybar/srcery

[bar/all]
inherit = bar/srcery
width = 100%
height = 20
offset-y = 0
offset-x = 0
radius = 0
fixed-center = true
line-size = 1
border-size = 0
border-top-size = 4
border-left-size = 5
border-right-size = 5
border-bottom-size = 0
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 0
cursor-click = pointer
cursor-scroll = ns-resize
bottom=false
font-0 = "Terminus:pixelsize=16;3"
font-1 = "Symbols Nerd Font:pixelsize=15;3"
dpi-x = 0
dpi-y = 0
enable-ipc = true
monitor = ${env:MONITOR:}

[bar/main]
inherit=bar/all
modules-left = powermenu power_mode jgmenu sync-up sync-down i3 xwindow 
modules-right = music backlight pulseaudio wifi cpu mem bat_total_tlp popup-calendar 
tray-position = right
tray-padding = 0
tray-maxsize = 16

[bar/side]
inherit=bar/all
modules-left = powermenu i3 xwindow 
modules-right = music temp backlight pulseaudio root public-ip wifi-long cpu mem bat0 bat1 popup-calendar 

[module/power_mode]
type = custom/script
exec = ~/.local/bin/polybar-script-xidlehook.sh
interval = 1
format = <label>
label = %output%
click-left = ~/.local/bin/polybar-script-xidlehook.sh --next
click-right = "notify-send polybar-env: ${env:POLYBAR_XIDLEHOOK_MODE}"

[module/idle]
type = custom/script
exec = echo $(( $(xidlehook --print) / 1000 ))
interval = 1
format = <label>
label = 鈴%output:0:15:...%

[module/sync]
type = custom/text
# exec-if = ""
content = ""
click-left = "rclone bisync gdrive:/DriveSyncFiles/pkonkol-obsidian/ ~/mnt/obsidian --verbose"
click-right = "jgmenu_run >/dev/null 2>&1 &"

[module/sync-up]
type = custom/text
# exec-if = ""
content = ""
click-left = "rclone sync ~/mnt/obsidian gdrive:/DriveSyncFiles/pkonkol-obsidian/ && notify-send rclone 'uploaded obsidian to cloud'"
click-right = "jgmenu_run >/dev/null 2>&1 &"

[module/sync-down]
type = custom/text
# exec-if = ""
content = ""
click-left = "rclone sync gdrive:/DriveSyncFiles/pkonkol-obsidian/ ~/mnt/obsidian && notify-send rclone 'synced obsidian from cloud' "
click-right = "jgmenu_run >/dev/null 2>&1 &"

[module/music]
type = internal/mpd

host = 127.0.0.1
port = 6600
interval = 1

format-online = <icon-play><icon-pause><icon-stop><icon-prev><icon-next><label-time> <label-song>
label-song = %artist:0:15:%-%title:0:20:%

label-offline =  mpd is offline
label-time = %elapsed%/%total%

; Only applies if <icon-X> is used
icon-play = 契
icon-pause = 
icon-stop = 栗
icon-prev = 玲
icon-next = 怜
#icon-seekb = ⏪
#icon-seekf = ⏩
icon-random = 
icon-repeat = 凌
icon-repeatone = 綾
#icon-single = 🔂
#icon-consume = ✀

; Used to display the state of random/repeat/repeatone/single
; Only applies if <icon-[random|repeat|repeatone|single]> is used
toggle-on-foreground = #ff
toggle-off-foreground = #55

; Only applies if <bar-progress> is used
bar-progress-width = 10
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─


[module/jgmenu]
type = custom/text
content-padding = 0
content = ""
click-left = "jgmenu_run >/dev/null 2>&1 &"

[module/i3]
inherit=module/srcery
type= internal/i3

format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

pin-workspaces = true
inline-mode = true
fuzzy-match = true

label-mode-padding = 0
label-mode-foreground = ${color.black}
label-mode-background = ${color.white}

label-focused = %name%
label-focused-background = ${color.bright_black}
label-focused-underline= ${color.red}
label-focused-foreground= ${color.yellow}
label-focused-padding = 0

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 0

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${color.yellow}
label-urgent-foreground = ${color.black}
label-urgent-underline = ${self.label-focused-underline}
label-urgent-padding = 0

label-separator = |

