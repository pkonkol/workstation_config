[gpg]
	program = gpg
[commit]
	gpgsign = false
[user]
	name = pkonkol
	email = piotrkonkol01 at gmail com
[usern]
    email = piotrkonkol01 at gmail com
[alias]
	lg = log --all --graph --decorate --oneline
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	lolb = log --graph --decorate --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all --simplify-by-decoration
	hist = log --pretty=format:\"%h %ad|%s%d [%an]\" --graph --date=short
	lolg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	ls = ls-files
	g = grep --break --heading --line-number
[color]
	ui=auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	editor = nvim
	pager = less -F -X
[grep]
	lineNumber = true
[credential]
	helper = store
